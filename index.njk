<section class="home-featured">
  <h1>latest entries</h1>
  <div class="card-container">

    {% set latestJournaling = collections.journaling 
      | rejectattr("inputPath", "search", "index.md")
      | sort(attribute="date", reverse=true) 
      | first 
    %}

    {% set latestLearning = collections.learning 
      | rejectattr("inputPath", "search", "index.md")
      | sort(attribute="date", reverse=true) 
      | first 
    %}

    {% if latestJournaling %}
      <a href="{{ latestJournaling.url }}" class="post-card-link">
        <div class="post-card">
          <div class="post-title">{{ latestJournaling.data.title }}</div>
          <p class="post-date">{{ latestJournaling.date | readableDate }}</p>
        </div>
      </a>
    {% endif %}

    {% if latestLearning %}
      <a href="{{ latestLearning.url }}" class="post-card-link">
        <div class="post-card">
          <div class="post-title">{{ latestLearning.data.title }}</div>
          <p class="post-date">{{ latestLearning.date | readableDate }}</p>
        </div>
      </a>
    {% endif %}

  </div>
</section>

