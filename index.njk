<section class="home-featured">
  <h2 class="featured-heading">latest entries</h2>
  <div class="latest-entry-grid">
    
    {# Latest from journaling #}
    {% set journalCount = 0 %}
    {% for post in collections.journaling | reverse %}
      {% if "index.md" not in post.inputPath and journalCount < 1 %}
        <a href="{{ post.url }}" class="featured-entry-link">
          <div class="featured-entry">
            <div class="entry-subheader">from journaling</div>
            <div class="featured-title">{{ post.data.title }}</div>
            <div class="post-date">{{ post.date | readableDate }}</div>
          </div>
        </a>
        {% set journalCount = journalCount + 1 %}
      {% endif %}
    {% endfor %}

    {# Latest from learning #}
    {% set learnCount = 0 %}
    {% for post in collections.learning | reverse %}
      {% if "index.md" not in post.inputPath and learnCount < 1 %}
        <a href="{{ post.url }}" class="featured-entry-link">
          <div class="featured-entry">
            <div class="entry-subheader">from learning</div>
            <div class="featured-title">{{ post.data.title }}</div>
            <div class="post-date">{{ post.date | readableDate }}</div>
          </div>
        </a>
        {% set learnCount = learnCount + 1 %}
      {% endif %}
    {% endfor %}

  </div>
</section>

