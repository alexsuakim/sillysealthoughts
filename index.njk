<section class="home-featured">
  <h2>latest entries</h2>
  <div class="card-container">
    {%- assign journal_posts = collections.journaling | sort: "date" | reverse %}
    {%- for post in journal_posts %}
      {%- unless post.inputPath contains "/index.md" %}
        <a href="{{ post.url }}" class="post-card-link">
          <div class="post-card">
            <div class="post-title">{{ post.data.title }}</div>
            <p class="post-date">{{ post.date | readableDate }}</p>
          </div>
        </a>
        {%- break %}
      {%- endunless %}
    {%- endfor %}

    {%- assign learn_posts = collections.learning | sort: "date" | reverse %}
    {%- for post in learn_posts %}
      {%- unless post.inputPath contains "/index.md" %}
