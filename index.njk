<section class="home-featured">
  <h2>latest entries</h2>
  <div class="card-container">

    {# Journaling: newest non-index post #}
    {% set journalPosts = collections.journaling 
      | reverse 
      | selectattr("inputPath", "not in", "./journaling/index.md") 
      | slice(0, 1) %}

    {% for post in journalPosts %}
      <a href="{{ post.url }}" class="post-card-link">
        <div class="post-card">
          <div class="post-title">{{ post.data.title }}</div>
          <p class="post-date">{{ post.date | readableDate }}</p>
        </div>
      </a>
    {% endfor %}

    {# Learning: newest non-index post #}
    {% set learningPosts = collections.learning 
      | reverse 
      | selectattr("inputPath", "not in", "./learning/index.md") 
      | slice(0, 1) %}

    {% for post in learningPosts %}
      <a href="{{ post.url }}" class="post-card-link">
        <div class="post-card">
          <div class="post-title">{{ post.data.title }}</div>
          <p class="post-date">{{ post.date | readableDate }}</p>
        </div>
      </a>
    {% endfor %}

  </div>
</section>


