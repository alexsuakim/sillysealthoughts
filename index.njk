  <div class="latest-entry-grid">

    {% set journalPosts = collections.journaling | reverse %}
    {% set latestJournal = journalPosts | rejectattr("inputPath", "equalto", "./journaling/index.md") | first %}

    {% set learningPosts = collections.learning | reverse %}
    {% set latestLearn = learningPosts | rejectattr("inputPath", "equalto", "./learning/index.md") | first %}

    {% if latestJournal %}
    <a href="{{ latestJournal.url }}" class="featured-entry-link">
      <div class="featured-entry">
        <p class="entry-subheader">from journaling</p>
        <h3 class="featured-title">{{ latestJournal.data.title }}</h3>
        <p class="post-date">{{ latestJournal.date | readableDate }}</p>
      </div>
    </a>
    {% endif %}

    {% if latestLearn %}
    <a href="{{ latestLearn.url }}" class="featured-entry-link">
      <div class="featured-entry">
        <p class="entry-subheader">from learning</p>
        <h3 class="featured-title">{{ latestLearn.data.title }}</h3>
        <p class="post-date">{{ latestLearn.date | readableDate }}</p>
      </div>
    </a>
    {% endif %}

  </div>
</section>

