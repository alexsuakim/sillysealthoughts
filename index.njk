<section class="home-featured">
  <h2>latest entries</h2>
  <div class="card-container">

    {# Journaling: filter out index.md, sort by date desc, show first #}
    {% set journalPosts = collections.journaling | reverse %}
    {% for post in journalPosts %}
      {% if "index.md" not in post.inputPath %}
        <a href="{{ post.url }}" class="post-card-link">
          <div class="post-card">
            <div class="post-title">{{ post.data.title }}</div>
            <p class="post-date">{{ post.date | readableDate }}</p>
          </div>
        </a>
        {% break %}
      {% endif %}
    {% endfor %}

    {# Learning: same logic #}
    {% set learningPosts = collections.learning | reverse %}
    {% for post in learningPosts %}
      {% if "index.md" not in post.inputPath %}
        <a href="{{ post.url }}" class="post-card-link">
          <div class="post-card">
            <div class="post-title">{{ post.data.title }}</div>
            <p class="post-date">{{ post.date | readableDate }}</p>
          </div>
        </a>
        {% break %}
      {% endif %}
    {% endfor %}
    
  </div>
</section>

