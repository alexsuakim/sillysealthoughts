<section class="sticky-board-wrapper">
  <div id="board" class="board"></div>

  <!-- Floating Add Button -->
  <button id="add-note-btn" class="add-note-btn" aria-label="Add a new sticky note">âž•</button>

  <!-- Popup Sticky Note Form -->
