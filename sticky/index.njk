<section class="sticky-board-wrapper">
  <div id="board"></div>

  <!-- Floating âž• Button -->
  <button id="add-note-btn" class="add-note-btn">+</button>

  <!-- Sticky Note Popup Form -->
  <div id="popup-form" class="note-popup">
    <form id="note-form">
      <textarea id="note-text" placeholder="you can leave a note..." required></textarea>
      <div>
        <label for="note-color">color:</label>
        <select id="note-color">
          <option value="#b0e0e6" selected>blue</option>
          <option value="#ffff88">yellow</option>
          <option value="#ffc0cb">pink</option>
          <option value="#98fb98">green</option>
        </select>
        <button type="submit">save note</button>
      </div>
    </form>
  </div>
</section>

<script type="module" src="/scripts/sticky.js"></script>